{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "typings.d.ts",
    "packages/**/*",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": ["packages/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      // "@/*": ["./src/*"],
      "theme": ["packages/theme"],
      "theme/*": ["packages/theme/*"],
      "constants": ["packages/constants"],
      "constants/*": ["packages/constants/*"]
    }
  }
}
